import pandas as pd
from sklearn.model_selection import train_test_split
from sklearn.feature_extraction.text import CountVectorizer
from sklearn.naive_bayes import MultinomialNB
from sklearn.metrics import accuracy_score, classification_report

# Make sure you uploaded `spam_data.csv` in the left-side panel
data = pd.read_csv("spam_data.csv")
print("ğŸ” Sample Data:")
print(data.head())

X = data['message']
y = data['label']

vectorizer = CountVectorizer()
X_vectorized = vectorizer.fit_transform(X)

X_train, X_test, y_train, y_test = train_test_split(X_vectorized, y, test_size=0.2, random_state=42)

model = MultinomialNB()
model.fit(X_train, y_train)

y_pred = model.predict(X_test)
print("\nğŸ“Š Model Evaluation:")
print("Accuracy:", accuracy_score(y_test, y_pred))
print(classification_report(y_test, y_pred))

sample_emails = [
    "Youâ€™ve won a free cruise to the Bahamas! Call now!",
    "Hi, just wanted to check in about tomorrowâ€™s meeting."
]
sample_vec = vectorizer.transform(sample_emails)
predictions = model.predict(sample_vec)

print("\nğŸ” Predictions for new messages:")
for email, label in zip(sample_emails, predictions):
    print(f"Email: {email}\nPrediction: {label}\n")
